# Database
DATABASE_URL="postgresql://user:password@localhost:5432/case_management"

# NextAuth
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# Admin Setup
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="your-secure-password"

# Storage
# Local storage path for evidence files
EVIDENCE_STORAGE_PATH="./uploads/evidence"
# Maximum file size in bytes (default: 100MB)
MAX_FILE_SIZE="104857600"

# Organization Settings
DEFAULT_MAX_USERS=5
DEFAULT_MAX_READONLY_USERS=20

# Security
# Number of rounds for password hashing
BCRYPT_ROUNDS=10
# Session token expiry in seconds (default: 24 hours)
SESSION_EXPIRY="86400"

# Email (optional)
# SMTP_HOST="smtp.example.com"
# SMTP_PORT="587"
# SMTP_USER="your-smtp-user"
# SMTP_PASSWORD="your-smtp-password"
# SMTP_FROM="noreply@example.com"

# Analytics (optional)
# ANALYTICS_ENABLED="true"
# ANALYTICS_PROVIDER="google"
# ANALYTICS_ID="your-analytics-id"

# Feature Flags
ENABLE_AUDIT_LOGS="true"
ENABLE_ANALYTICS="true"
ENABLE_EMAIL_NOTIFICATIONS="false"
ENABLE_2FA="false"

# API Rate Limiting
RATE_LIMIT_WINDOW="60000" # 1 minute in milliseconds
RATE_LIMIT_MAX_REQUESTS="100"

# File Upload Settings
ALLOWED_FILE_TYPES="image/*,application/pdf,.doc,.docx,.xls,.xlsx"
SCAN_UPLOADS_FOR_MALWARE="true"

# Report Generation
REPORT_EXPORT_FORMATS="pdf,docx,html"
REPORT_TEMPLATE_PATH="./templates/reports"

# Development
# Set to "development" or "production"
NODE_ENV="development"
# Enable detailed error messages
DEBUG="false"
# Enable API request logging
LOG_REQUESTS="true"

# Backup Settings (optional)
# BACKUP_ENABLED="true"
# BACKUP_PROVIDER="s3"
# BACKUP_BUCKET="your-backup-bucket"
# AWS_ACCESS_KEY_ID="your-aws-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret"
# BACKUP_FREQUENCY="daily" # daily, weekly, monthly

# Custom Domain (optional)
# CUSTOM_DOMAIN="your-domain.com"
# SSL_CERT_PATH="/path/to/cert"
# SSL_KEY_PATH="/path/to/key"
